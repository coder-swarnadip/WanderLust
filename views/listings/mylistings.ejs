<% layout("layouts/boilerplate.ejs") %>

<div class="container mt-4">
    <h2 class="mb-4">My Listings</h2>

    <% if (userListings.length === 0) { %>
        <p>You have not created any listings yet. <a href="/listings/new">Create one now!</a></p>
    <% } else { %>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-1 mt-3">
            <% for (let listing of userListings) { %>
                <a href="/listings/<%= listing._id %>" class="listing_link">
                    <div class="card col listing-card">
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                        <div class="card-body">
                            <p class="card-text">
                                <b><%= listing.title %></b><br>
                                <%= listing.price.toLocaleString("en-IN") %> / night
                                <i class="tax-info"> &nbsp;+&nbsp; 18% tax</i>
                            </p>
                        </div>
                    </div>
                </a>
            <% } %>
        </div>
    <% } %>
</div>
