<% layout("layouts/boilerplate.ejs") %>

<div class="d-flex justify-content-center align-items-center vh-100" style="background-color: #F3F4F6;">
    <div class="col-md-5 p-5 rounded shadow-lg" style="background-color: #fff; border-top: 5px solid #fe424d;">
        <h2 class="text-center fw-bold mb-4" style="color: #fe424d;">Join Wanderlust</h2>

        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <!-- Username Field -->
            <div class="mb-3">
                <label for="username" class="form-label fw-semibold" style="color: #333;">Username</label>
                <input type="text" name="username" id="username" class="form-control p-2" 
                    style="border: 2px solid #fe424d; background-color: #fff;" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter a username!</div>
            </div>

            <!-- Email Field -->
            <div class="mb-3">
                <label for="email" class="form-label fw-semibold" style="color: #333;">E-mail</label>
                <input type="email" name="email" id="email" class="form-control p-2" 
                    style="border: 2px solid #fe424d; background-color: #fff;" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter a valid email!</div>
            </div>

            <!-- Password Field -->
            <div class="mb-3">
                <label for="password" class="form-label fw-semibold" style="color: #333;">Password</label>
                <input type="password" name="password" id="password" class="form-control p-2" 
                    style="border: 2px solid #fe424d; background-color: #fff;" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter a password!</div>
            </div>

            <!-- Signup Button -->
            <button class="btn w-100 fw-bold py-2" 
                style="background-color: #fe424d; color: #fff; border-radius: 5px;">
                Sign Up
            </button>
        </form>

        <!-- Already Have an Account Section -->
        <div class="text-center mt-4">
            <p style="color: #333;">Already have an account?</p>
            <a href="/login" class="btn w-100 fw-bold py-2" 
                style="background-color: #333; color: #fff; border-radius: 5px;">
                Log In
            </a>
        </div>
    </div>
</div>
